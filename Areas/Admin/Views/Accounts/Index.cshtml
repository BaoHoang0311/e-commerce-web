@model IEnumerable<e_commerce_web.Models.Account>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="page-header">
    <h2 class="header-title">Accounts List</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a href="/trang-admin" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" href="/Admin/Accounts/Index">Accounts</a>
            <span class="breadcrumb-item active">Accounts List</span>
        </nav>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-8">
                <div class="d-md-flex">
                    <div class="m-b-10 m-r-15">
                        <select class="custom-select" style="min-width: 180px;">
                            <option selected>Catergory</option>
                            <option value="all">All</option>
                            <option value="homeDeco">Home Decoration</option>
                            <option value="eletronic">Eletronic</option>
                            <option value="jewellery">Jewellery</option>
                        </select>
                    </div>
                    <div class="m-b-10">
                        <select class="custom-select" style="min-width: 180px;">
                            <option selected>Status</option>
                            <option value="all">All</option>
                            <option value="inStock">In Stock </option>
                            <option value="outOfStock">Out of Stock</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-right">
                <a class="btn btn-primary" href="/Admin/Accounts/Create">
                    <i class="anticon anticon-plus-circle m-r-5"></i>
                    <span>Add Account</span>
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Active</th>
                        <th>FulllName</th>
                        <th>LastLogin</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var acc in Model)
                    {
                        <tr>
                            <td>
                                @acc.AccountId
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img class="img-fluid rounded" src="assets/images/others/thumb-9.jpg" style="max-width: 60px" alt="">
                                    <h6 class="m-b-0 m-l-10">@acc.Phone</h6>
                                </div>
                            </td>
                            <td>@acc.Email</td>
                            <td>
                                <div class="d-flex align-items-center">

                                    @if (acc.Active == true)
                                    {
                                        <div class="badge badge-success badge-dot m-r-10"></div>
                                        <div>Active</div>
                                    }
                                    else
                                    {
                                        <div class="badge badge-danger badge-dot m-r-10"></div>
                                        <div>Block</div>
                                    }
                                </div>
                            </td>
                            <td>@acc.FullName</td>
                            <td>@acc.LastLogin</td>
                            <td class="text-right">
                                <a class="btn btn-icon btn-hover btn-sm btn-rounded pull-right"
                                   href="/Admin/Accounts/Edit/@acc.AccountId">
                                    <i class="anticon anticon-edit"></i>
                                </a>
                                <a class="btn btn-icon btn-hover btn-sm btn-rounded"
                                   href="/Admin/Accounts/Delete/@acc.AccountId">
                                    <i class="anticon anticon-delete"></i>
                                </a>
                            </td>
                        </tr>
                    }



                </tbody>
            </table>
        </div>
    </div>
</div>


