@using e_commerce_web.Extension;

@model e_commerce_web.Data.ViewModel.HomePageVM
@{
    ViewData["Title"] = "Home Page";
}

<!--Trang chủ HomePage-->
<!-- Begin Slider Top Page-->
<!-- Slider Area End Here -->
<!-- Begin Shipping Area -->
<div class="shipping-area section-space-top-100">
    <div class="container">
        <div class="row">
            <!--Free Shipping-->
            <div class="col-lg-4 col-md-6">
                <div class="shipping-item">
                    <div class="shipping-img">
                        <img src="~/Userassets/images/shipping/icon/plane.png" alt="Shipping Icon">
                    </div>
                    <div class="shipping-content">
                        <h5 class="title">Free Shipping</h5>
                        <p class="short-desc mb-0">Free Home Delivery Offer</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 pt-6 pt-md-0">
                <div class="shipping-item">
                    <div class="shipping-img">
                        <img src="~/Userassets/images/shipping/icon/earphones.png" alt="Shipping Icon">
                    </div>
                    <div class="shipping-content">
                        <h5 class="title">Online Support</h5>
                        <p class="short-desc mb-0">24/7 Online Support Provide</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 pt-6 pt-lg-0">
                <div class="shipping-item">
                    <div class="shipping-img">
                        <img src="~/Userassets/images/shipping/icon/shield.png" alt="Shipping Icon">
                    </div>
                    <div class="shipping-content">
                        <h5 class="title">Secure Payment</h5>
                        <p class="short-desc mb-0">Fully Secure Payment System</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Shipping Area End Here -->
<!-- Begin Sản phẩm All items -->
<div class="product-area section-space-y-axis-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="nav product-tab-nav pb-10" id="myTab" role="tablist">
                    <!--All item fresh fruits-->
                    <li class="nav-item" role="presentation">
                        <a class="active" id="all-items-tab" data-bs-toggle="tab" href="#all-items" role="tab" aria-controls="all-items" aria-selected="true">
                            <div class="product-tab-icon">
                                <img src="~/Userassets/images/product/icon/1.png" alt="Product Icon">
                            </div>
                            All Items
                        </a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a id="fresh-fruits-tab" data-bs-toggle="tab" href="#fresh-fruits" role="tab" aria-controls="fresh-fruits" aria-selected="false">
                            <div class="product-tab-icon">
                                <img src="~/Userassets/images/product/icon/2.png" alt="Product Icon">
                            </div>
                            Trái cây nhập khẩu
                        </a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a id="vegetable-tab" data-bs-toggle="tab" href="#vegetable" role="tab" aria-controls="vegetable" aria-selected="false">
                            <div class="product-tab-icon">
                                <img src="~/Userassets/images/product/icon/3.png" alt="Product Icon">
                            </div>
                            Rau củ
                        </a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="all-items" role="tabpanel" aria-labelledby="all-items-tab">
                        <div class="product-item-wrap row">
                            @if (Model.All != null)
                            {
                                int i = 0;
                                foreach (var item in Model.All)
                                {
                                    i++;
                                    if (i > 8) break;
                                    string url = $"/san-pham/{@item.Alias}.html";
                                    <div class="col-xl-3 col-lg-4 col-sm-6">
                                        <div class="product-item">
                                            <div class="product-img img-zoom-effect">
                                                <a href="@url">
                                                    <img class="img-full" src="@item.Thumb" width="300" height="270" alt="Product Images">
                                                </a>
                                                <div class="product-add-action">
                                                    <ul>
                                                        <li>
                                                            <a onclick="getProduct(@item.ProductId)"><i class="pe-7s-cart"></i></a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="product-content">
                                                <a class="product-name" href="@url">@item.ProductName</a>
                                                <div class="price-box pb-1">
                                                    <span class="new-price">
                                                        @item.Price.Value.ToVND()
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                        <div class="float-right">
                            <div class="pt-3">
                                <a class="btn btn-primary btn-white-hover rounded-0"
                                   asp-area="" asp-action="Index" asp-controller="Products">Còn tiếp</a>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="fresh-fruits" role="tabpanel" aria-labelledby="fresh-fruits-tab">
                        <div class="product-item-wrap row">
                            @if (Model.TraiCayNhapKhau != null)
                            {
                                int i = 0;
                                foreach (var item in Model.TraiCayNhapKhau)
                                {
                                    string url = $"/san-pham/{@item.Alias}.html";
                                    i++;
                                    if (i > 8) break;
                                    <div class="col-xl-3 col-lg-4 col-sm-6">
                                        <div class="product-item">
                                            <div class="product-img img-zoom-effect">
                                                <a href="@url">
                                                    <img class="img-full" src="@item.Thumb" width="300" height="270" alt="Product Images">
                                                </a>
                                                <div class="product-add-action">
                                                    <ul>
                                                        <li>
                                                            <a href="/cart.html">
                                                                <i class="pe-7s-cart"></i>
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="product-content">
                                                <a class="product-name" href="@url">@item.ProductName</a>
                                                <div class="price-box pb-1">
                                                    <span class="new-price">
                                                        @item.Price.Value.ToVND()
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                        <div class="float-right">
                            <div class="pt-3">
                                <a class="btn btn-primary btn-white-hover rounded-0"
                                   asp-area="" asp-action="Index" asp-controller="Products">Còn tiếp</a>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="vegetable" role="tabpanel" aria-labelledby="vegetable-tab">
                        <div class="product-item-wrap row">
                            @if (Model.RauCu != null)
                            {
                                int i = 0;
                                foreach (var item in Model.RauCu)
                                {
                                    i++;
                                    if (i > 8) break;
                                    string url = $"/san-pham/{@item.Alias}.html";
                                    <div class="col-xl-3 col-lg-4 col-sm-6">
                                        <div class="product-item">
                                            <div class="product-img img-zoom-effect">
                                                <a href="@url">
                                                    <img class="img-full" src="@item.Thumb" width="300" height="270" alt="Product Images">
                                                </a>
                                                <div class="product-add-action">
                                                    <ul>
                                                        <li>
                                                            <a href="/cart.html">
                                                                <i class="pe-7s-cart"></i>
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="product-content">
                                                <a class="product-name" href="@url">@item.ProductName</a>
                                                <div class="price-box pb-1">
                                                    <span class="new-price">
                                                        @item.Price.Value.ToVND()
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                        <div class="float-right">
                            <div class="pt-3">
                                <a class="btn btn-primary btn-white-hover rounded-0"
                                   asp-area="" asp-action="Index" asp-controller="Products">Còn tiếp</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{

}

