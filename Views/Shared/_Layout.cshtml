<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Harmic-@ViewData["Title"]</title>
    <meta name="robots" content="noindex, follow" />
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/Userassets/images/favicon.ico" />

    <!-- CSS
    ============================================ -->
    <!-- Vendor CSS (Contain Bootstrap, Icon Fonts) -->
    <link rel="stylesheet" href="~/Userassets/css/vendor/font-awesome.min.css" />
    <link rel="stylesheet" href="~/Userassets/css/vendor/Pe-icon-7-stroke.css" />

    <!-- Plugin CSS (Global Plugins Files) -->
    <link rel="stylesheet" href="~/Userassets/css/plugins/animate.min.css">
    <link rel="stylesheet" href="~/Userassets/css/plugins/jquery-ui.min.css">
    <link rel="stylesheet" href="~/Userassets/css/plugins/swiper-bundle.min.css">
    <link rel="stylesheet" href="~/Userassets/css/plugins/nice-select.css">
    <link rel="stylesheet" href="~/Userassets/css/plugins/magnific-popup.min.css" />

    <!-- Style CSS -->
    <link rel="stylesheet" href="~/Userassets/css/style.css">

</head>

<body>
    <div class="main-wrapper">
        <!-- Begin Main Header Area -->
        <header class="main-header_area position-relative">
            <div class="header-middle py-5">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-12">
                            <div class="header-middle-wrap">
                                <a href="/" class="header-logo">
                                    <img src="~/Userassets/images/logo/dark.png" alt="Header Logo">
                                </a>
                                <div class="header-search-area d-none d-lg-block">
                                    <form method="get" asp-controller="Products" asp-area="" asp-action="Index" class="header-searchbox">
                                        <input class="input-field" type="text" id="textPerson" name="keySearch" value="@ViewBag.KKK" placeholder="Search Products">
                                        <button class="btn btn-outline-whisper btn-primary-hover" type="submit"><i class="pe-7s-search"></i></button>
                                    </form>
                                </div>
                                <div class="header-right">
                                    <ul>
                                        <li class="dropdown d-none d-md-block">
                                            <partial name="_Identity.cshtml">
                                        </li>
                                        <li class="d-block d-lg-none">
                                            <a href="#searchBar" class="search-btn toolbar-btn">
                                                <i class="pe-7s-search"></i>
                                            </a>
                                        </li>
                                        <li class="minicart-wrap me-3 me-lg-0">
                                            <a asp-controller="Cart" asp-action="Index">
                                                <div id="partialDiv" class="minicart-btn">
                                                    @await Component.InvokeAsync("ShoppingCartCP")
                                                </div>
                                            </a>
                                        </li>
                                        <li class="mobile-menu_wrap d-block d-lg-none">
                                            <a href="#mobileMenu" class="mobile-menu_btn toolbar-btn pl-0">
                                                <i class="pe-7s-menu"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="main-header header-sticky" data-bg-color="#bac34e">
                <div class="container">
                    <div class="main-header_nav position-relative">
                        <div class="row align-items-center">
                            <div class="col-lg-12 d-none d-lg-block">
                                <div class="main-menu">
                                    <nav class="main-nav">
                                        <ul>
                                            <li class="drop-holder">
                                                <a href="/">Home</a>
                                            </li>
                                            <li>
                                                <a href="/about.html">About</a>
                                            </li>
                                            <li class="megamenu-holder">
                                                <a asp-area="" asp-action="Index" asp-controller="Products">
                                                    Shop
                                                </a>
                                            </li>
                                            <li>
                                                <a href="/contact.html">Contact</a>
                                            </li>
                                            <li class="drop-holder">
                                                <a href="javascript:void(0)">
                                                    Danh mục sản phẩm
                                                    <i class="fa fa-chevron-down"></i>
                                                </a>
                                                <ul class="drop-menu">
                                                    @await Component.InvokeAsync("Category_Nav")
                                                </ul>

                                            </li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mobile-menu_wrapper" id="mobileMenu">
                <div class="harmic-offcanvas-body">
                    <div class="inner-body">
                        <div class="harmic-offcanvas-top">
                            <a href="#" class="button-close"><i class="pe-7s-close"></i></a>
                        </div>
                        <div class="offcanvas-menu_area">
                            <nav class="offcanvas-navigation">
                                <ul class="mobile-menu">
                                    <li class="menu-item-has-children">
                                        <a href="/">
                                            <span class="mm-text">
                                                Home
                                            </span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="about.html">
                                            <span class="mm-text">About Us</span>
                                        </a>
                                    </li>
                                    <li class="menu-item-has-children">
                                        <a href="#">
                                            <span class="mm-text">
                                                Shop
                                                <i class="pe-7s-angle-down"></i>
                                            </span>
                                        </a>
                                        <ul class="sub-menu">
                                            <li>
                                                <a href="faq.html">
                                                    <span class="mm-text">Frequently Questions</span>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="404.html">
                                                    <span class="mm-text">Error 404</span>
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                    <li class="menu-item-has-children">
                                        <a href="/Blog/Index">
                                            <span class="mm-text">
                                                Blog
                                            </span>
                                        </a>
                                    </li>
                                    <li class="menu-item-has-children">
                                        <a href="#">
                                            <span class="mm-text">
                                                Hướng dẫn mua hàng
                                            </span>
                                        </a>
                                    </li>

                                    <li>
                                        <a href="/contact.html">
                                            <span class="mm-text">Contact</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <div class="offcanvas-search_wrapper" id="searchBar">
                <div class="harmic-offcanvas-body">
                    <div class="container h-100">
                        <div class="offcanvas-search">
                            <div class="harmic-offcanvas-top">
                                <a href="#" class="button-close"><i class="pe-7s-close"></i></a>
                            </div>
                            <span class="searchbox-info">Start typing and press Enter to search</span>
                            <form action="#" class="hm-searchbox">
                                <input type="text" placeholder="Search">
                                <button class="search-btn" type="submit"><i class="pe-7s-search"></i></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="offcanvas-minicart_wrapper" id="miniCart">
                <div class="harmic-offcanvas-body">
                    <div class="minicart-content">
                        <div class="minicart-heading">
                            <h4 class="mb-0">Shopping Cart</h4>
                            <a href="#" class="button-close"><i class="pe-7s-close"></i></a>
                        </div>
                        <ul class="minicart-list">
                            <li class="minicart-product">
                                <a class="product-item_remove" href="#">
                                    <i class="pe-7s-close"></i>
                                </a>
                                <a href="shop.html" class="product-item_img">
                                    <img class="img-full" src="~/Userassets/images/product/small-size/1-1-112x124.jpg" alt="Product Image">
                                </a>
                                <div class="product-item_content">
                                    <a class="product-item_title" href="shop.html">Black Pepper Grains</a>
                                    <span class="product-item_quantity">1 x $80.00</span>
                                </div>
                            </li>
                            <li class="minicart-product">
                                <a class="product-item_remove" href="#">
                                    <i class="pe-7s-close"></i>
                                </a>
                                <a href="shop.html" class="product-item_img">
                                    <img class="img-full" src="~/Userassets/images/product/small-size/1-2-112x124.jpg" alt="Product Image">
                                </a>
                                <div class="product-item_content">
                                    <a class="product-item_title" href="shop.html">Peanut Big Bean</a>
                                    <span class="product-item_quantity">1 x $80.00</span>
                                </div>
                            </li>
                            <li class="minicart-product">
                                <a class="product-item_remove" href="#">
                                    <i class="pe-7s-close"></i>
                                </a>
                                <a href="shop.html" class="product-item_img">
                                    <img class="img-full" src="~/Userassets/images/product/small-size/1-3-112x124.jpg" alt="Product Image">
                                </a>
                                <div class="product-item_content">
                                    <a class="product-item_title" href="shop.html">Dried Lemon Green</a>
                                    <span class="product-item_quantity">1 x $80.00</span>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="minicart-item_total">
                        <span>Subtotal</span>
                        <span class="ammount">$240.00</span>
                    </div>
                    <div class="group-btn_wrap d-grid gap-2">
                        <a href="cart.html" class="btn btn-secondary btn-primary-hover">View Cart</a>
                        <a href="checkout.html" class="btn btn-secondary btn-primary-hover">Checkout</a>
                    </div>
                </div>
            </div>
            <div class="global-overlay"></div>
        </header>
        <!-- Main Header Area End Here -->

        <main class="main-content">
            @RenderBody()
        </main>

        <!-- Begin Scroll To Top -->
        <a class="scroll-to-top" href="">
            <i class="fa fa-chevron-up"></i>
        </a>
        <!-- Scroll To Top End Here -->
        <!--footer-->
        <partial name="/Views/Shared/Footer/Footer.cshtml" />
        <!--footer-->
    </div>

    <!-- Global Vendor, plugins JS -->
    <!-- JS Files
    ============================================ -->
    <!-- Global Vendor, plugins JS -->
    <!-- Vendor JS -->
    <script src="~/Userassets/js/vendor/bootstrap.bundle.min.js"></script>
    <script src="~/Userassets/js/vendor/jquery-3.5.1.min.js"></script>
    <script src="~/Userassets/js/vendor/jquery-migrate-3.3.0.min.js"></script>
    <script src="~/Userassets/js/vendor/modernizr-3.11.2.min.js"></script>
    <script src="~/Userassets/js/vendor/jquery.waypoints.js"></script>

    <!--Plugins JS-->
    <script src="~/Userassets/js/plugins/wow.min.js"></script>
    <script src="~/Userassets/js/plugins/jquery-ui.min.js"></script>
    <script src="~/Userassets/js/plugins/swiper-bundle.min.js"></script>
    <script src="~/Userassets/js/plugins/jquery.nice-select.js"></script>
    <script src="~/Userassets/js/plugins/parallax.min.js"></script>
    <script src="~/Userassets/js/plugins/jquery.magnific-popup.min.js"></script>

    <!--Main JS (Common Activation Codes)-->
    <script src="~/Userassets/js/main.js"></script>
    @*jquery autocomplete*@
    <partial name="/Views/Shared/PartialView/Jquery.cshtml" />
    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("Notyf")

    <script>
        // ko reload page khi f5 sản phẩm AddCart
        function getProduct(product_id) {
            $.ajax({
                method: "Get",
                url: '/Cart/AddToCart',
                data:
                {
                    ProductID: product_id,
                    Detail: 0,
                },
                success: function (results) {
                    if (results.status == "success") {
                        $("#partialDiv").load("/Cart/GetComponentGioHang");
                    }
                },
                error: function (xhr) {
                    alert('error');
                }
            });
        }
        function getURL() {
            $.ajax({
                method: "Get",
                url: '/dangnhap.html',
                data:
                {
                    returnUrl: window.location.pathname,
                },
                success: function (results) {
                    if (results.status == "success") {
                        window.location.href = results.redirectUrl;
                    }
                },
                error: function (xhr) {
                    alert('error');
                }
            })
        }
    </script>
</body>
</html>
