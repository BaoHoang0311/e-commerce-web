@model e_commerce_web.Data.ViewModel.ListCategoryVM


<form method="Get" asp-controller="Products" asp-action="Index">
    <div class="widgets-searchbox mb-9">
        <input class="input-field" type="text" name="keySearch" placeholder="Search" value="@ViewBag.KKK">
        <button class="widgets-searchbox-btn" type="submit">
            <i class="pe-7s-search"></i>
        </button>
    </div>

    <div class="widgets-area mb-9">
        <h2 class="widgets-title mb-5">Category</h2>
        <div class="widgets-item">
            <ul class="widgets-checkbox">
                @for (int i = 0; i < Model.ListCate.Count; i++)
                {

                    <li>
                        <input class="shopitem-list"
                               id="@Model.ListCate[i].Id"
                               type="checkbox"
                               name="Cat"
                               value="@Model.ListCate[i].Id"
                               checked="@Model.ListCate[i].Selected"
                               />
                        <label for="@Model.ListCate[i].Id">@Model.ListCate[i].Name</label>
                    </li>
                }
            </ul>
        </div>
    </div>
    <div class="widgets-area widgets-filter mb-9">
        <h2 class="widgets-title mb-5">Price Filter</h2>
        <div class="price-filter">
            <div id="slider-range"></div>
            <div class="price-slider-amount">
                <button class="btn btn-primary btn-secondary-hover">Filter</button>

                @*<div class="label-input position-relative">
                <label>price : </label>
                <input type="text" id="amount" name="price" placeholder="Add Your Price" />
            </div>*@

            </div>
            <div id="slider-range">
                <input type="text" class="js-range-slider" value="" />
            </div>
            <div class="extra-controls">
                <input type="text" class="js-input-from"  name ="A" value="0" />
                <input type="text" class="js-input-to" name ="B" value="0" />
            </div>
        </div>
    </div>
</form>





